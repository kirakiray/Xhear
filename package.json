{
  "name": "xhear",
  "version": "7.2.3",
  "description": "A very simple and easy to use web components library",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "build": "npm run rollup && npm run terser && node scripts/add-comments.js",
    "rollup": "npm run rollup-umd && npm run rollup-esm",
    "terser": "npm run terser-umd && npm run terser-esm",
    "rollup-umd": "rollup src/base.mjs --file dist/xhear.js --format umd --name '$'",
    "terser-umd": "terser dist/xhear.js -c -m -o dist/xhear.min.js",
    "rollup-esm": "rollup src/base.mjs --file dist/xhear.mjs --format es",
    "terser-esm": "terser dist/xhear.mjs -c -m -o dist/xhear.min.mjs",
    "static-server": "node scripts/static-server",
    "playwright": "npx playwright test",
    "test": "node scripts/ci-test"
  },
  "author": {
    "name": "YAO",
    "email": "kirayao@hotmail.com",
    "url": "https://kirakiray.com/"
  },
  "license": "MIT",
  "dependencies": {
    "stanz": "^8.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.3",
    "jasmine-core": "^4.6.0",
    "koa": "^2.14.1",
    "koa-static": "^5.0.0",
    "rollup": "^3.21.6",
    "shelljs": "^0.8.5",
    "terser": "^5.17.3"
  },
  "main": "dist/xhear.js",
  "exports": {
    "require": "./dist/xhear.js",
    "import": "./dist/xhear.mjs"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirakiray/Xhear.git"
  },
  "bugs": {
    "url": "https://github.com/kirakiray/Xhear/issues"
  },
  "homepage": "https://github.com/kirakiray/Xhear",
  "startyear": "2018"
}
